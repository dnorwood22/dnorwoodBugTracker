@model dnorwoodBugTracker.Models.CodeFirst.TicketComment

@{
    ViewBag.Title = "Delete";
}

<h2>Edit</h2>

<div>
    <h4>Ticket Comment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Author
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.FullName)
        </dd>

        <dt>
            Created
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>

